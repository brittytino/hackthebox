generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PARTICIPANT
  ADMIN
  JUDGE
}

enum RoundType {
  DECODE_THE_SECRET
  FIND_AND_CRACK
  CATCH_THE_FLAG
}

enum RoundStatus {
  PENDING
  ACTIVE
  COMPLETED
  LOCKED
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  username      String?       @unique
  passwordHash  String?
  role          UserRole      @default(PARTICIPANT)
  teamId        String?
  team          Team?         @relation(fields: [teamId], references: [id])
  submissions   Submission[]
  isVerified    Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([email])
  @@index([username])
  @@index([teamId])
}

model Team {
  id            String        @id @default(uuid())
  name          String        @unique
  member1Name   String
  member2Name   String
  members       User[]
  submissions   Submission[]
  scores        Score[]
  storyProgress StoryProgress[]
  qualified     Boolean       @default(false)
  qualifiedAt   DateTime?
  disqualified  Boolean       @default(false)
  currentLevel  Int           @default(1)
  startedAt     DateTime      @default(now())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([name])
  @@index([qualified])
  @@index([currentLevel])
}

model Round {
  id            String        @id @default(uuid())
  name          String
  type          RoundType
  status        RoundStatus   @default(PENDING)
  order         Int           @unique
  description   String?
  startTime     DateTime?
  endTime       DateTime?
  challenges    Challenge[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([order])
  @@index([status])
}

model Challenge {
  id            String        @id @default(uuid())
  roundId       String
  round         Round         @relation(fields: [roundId], references: [id], onDelete: Cascade)
  title         String
  description   String
  storyContext  String?       // Story narrative for this challenge
  characterMessage String?     // Message from Veera/Vikram/etc
  points        Int
  flagHash      String
  maxAttempts   Int?
  order         Int
  hints         String?
  hintPenalty   Int           @default(50) // Points deducted for using hint
  isActive      Boolean       @default(true)
  difficulty    String        @default("MEDIUM") // EASY, MEDIUM, HARD
  submissions   Submission[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([roundId])
  @@index([isActive])
  @@index([order])
}

model Submission {
  id            String        @id @default(uuid())
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId        String?
  team          Team?         @relation(fields: [teamId], references: [id])
  challengeId   String
  challenge     Challenge     @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  submittedFlag String
  isCorrect     Boolean       @default(false)
  points        Int           @default(0)
  attempts      Int           @default(1)
  createdAt     DateTime      @default(now())

  @@index([userId])
  @@index([teamId])
  @@index([challengeId])
  @@index([isCorrect])
  @@index([createdAt])
}

model Score {
  id            String        @id @default(uuid())
  teamId        String
  team          Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  totalPoints   Int           @default(0)
  lastSolved    DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([teamId])
  @@index([totalPoints])
  @@index([lastSolved])
}

model SystemConfig {
  id            String        @id @default(uuid())
  key           String        @unique
  value         String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model StoryProgress {
  id                String        @id @default(uuid())
  teamId            String
  team              Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  currentRound      Int           @default(1)
  round1Completed   Boolean       @default(false)
  round2Completed   Boolean       @default(false)
  round3Completed   Boolean       @default(false)
  round1Artifacts   String?       // JSON: {systemTarget, darkweaveCode, credentialHash}
  round2Artifacts   String?       // JSON: {masterKey, backdoorLocation}
  round3Winner      Boolean       @default(false)
  storyEnding       String?       // SUCCESS or FAILED
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@unique([teamId])
  @@index([currentRound])
  @@index([round3Winner])
}

model StoryState {
  id                String        @id @default(uuid())
  storyStarted      Boolean       @default(false)
  storyEnded        Boolean       @default(false)
  round3Winner      String?       // Team ID of first winner
  winnerTeamName    String?
  winTimestamp      DateTime?
  finalOutcome      String?       // CITY_SAVED or BREACH_EXECUTED
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model Activity {
  id            String        @id @default(uuid())
  teamId        String
  teamName      String
  challengeId   String?
  challengeTitle String?
  roundNumber   Int
  levelNumber   Int
  actionType    String        // SOLVED, HINT_USED, STARTED_ROUND
  storyMessage  String?       // "Team X helped Veera locate command center"
  points        Int?
  createdAt     DateTime      @default(now())

  @@index([createdAt])
  @@index([teamId])
  @@index([actionType])
}
